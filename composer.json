{
    "name": "drewlabs/htr",
    "description": "HTTP Web Service Test runner implementation using PHP Programming language and configuration files written in YAML or JSON format",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "HTTP",
        "Test Runner",
        "YAML",
        "JSON"
    ],
    "bin": [
        "bin/htr"
    ],
    "autoload": {
        "psr-4": {
            "Drewlabs\\Htr\\": "src/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "ext-json": "*",
        "drewlabs/curl-rest-client": "^0.2.6"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "composer/package-versions-deprecated": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "process-timeout": 0
    },
    "suggest": {
        "ext-yaml": "required to parse and generate yaml documents"
    }
}
